--Tabla movies
CREATE TABLE movies (
  id INTEGER PRIMARY KEY,
  title TEXT NOT NULL,
  year INTEGER NOT NULL,
  estudio_id INTEGER
);

--Datos de la tabla movies
INSERT INTO movies VALUES 
(1, 'Home Alone' ,1990, 4),
(2, 'Star Wars', 1977, 1),
(3, 'Jurassic Park', 1993, 2),
(4, 'Frozen', 2013, 3),
(5, 'Pirates of the Caribbean', 2003, 3);
